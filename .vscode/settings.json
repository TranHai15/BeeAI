{
  // Cấu hình Background cho toàn bộ giao diện
  "background.style": {
    "content": "''",
    "pointer-events": "none", // Tắt các sự kiện chuột cho background
    "position": "absolute", // Đặt background ở vị trí tuyệt đối
    "z-index": "99999", // Đảm bảo background nằm phía trên cùng
    "background-position": "center", // Căn giữa background
    "background-size": "cover", // Làm cho hình ảnh background phủ toàn bộ màn hình
    "width": "100%", // Đặt chiều rộng của background là 100%
    "height": "100%", // Đặt chiều cao của background là 100%
    "opacity": 0.2 // Đặt độ mờ của background
  },

  // Các hình ảnh tùy chỉnh cho background
  "background.customImages": [
    "https://i.pinimg.com/736x/0c/9c/31/0c9c31617dd4fea10b244ac9e6751fa6.jpg",
    "https://i.pinimg.com/736x/83/56/b1/8356b1e6a26cd77f24a577ccab16fc40.jpg",
    "https://i.pinimg.com/736x/f4/26/a7/f426a7430ae65b50894436dd814459cb.jpg"
  ],

  // Các cấu hình cho các loại file PHP
  "intelephense.files.associations": ["*.php", "*.phtml"],

  // Cấu hình trình duyệt mặc định khi chạy liveServer
  "liveServer.settings.CustomBrowser": "chrome",

  // Tự động lưu khi chuyển focus
  "files.autoSave": "onFocusChange",

  // Định dạng mã nguồn sử dụng Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Tắt minimap
  "editor.minimap.enabled": false,

  // Định dạng code cho PHP
  "[php]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Tự động đóng ngoặc
  "editor.autoClosingBrackets": "always",

  // Tích hợp với Webhint cho DevTools
  "vscode-edge-devtools.webhintInstallNotification": true,

  // Tắt xác nhận khi kéo và thả trong Explorer
  "explorer.confirmDragAndDrop": false,

  // Font chữ sử dụng trong editor
  "editor.fontFamily": "Comparison,JetBrains mono,Regular",

  // Tự động tải lại Git
  "git.autofetch": true,

  // Cấu hình ngôn ngữ cho spell check
  "cSpell.language": "en,vi",

  // Áp dụng cài đặt cho tất cả các profile
  "workbench.settings.applyToAllProfiles": ["highlightOnCopy.backgroundColor"],
  "highlightOnCopy.backgroundColor": "rgba(102, 16, 242.5)",

  // Tắt màn hình bắt đầu khi mở Visual Studio Code
  "workbench.startupEditor": "none",

  // Tự động bỏ qua trim whitespace trong diff editor
  "diffEditor.ignoreTrimWhitespace": true,

  // Ẩn status bar
  // "workbench.statusBar.visible": false,

  // Không yêu cầu xác nhận khi commit Git
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // Cập nhật import khi di chuyển file trong JavaScript
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Chủ đề giao diện mặc định
  "workbench.colorTheme": "Neon Vommit",

  // Đặt vị trí của Activity Bar
  "workbench.activityBar.location": "top",

  // Đặt theme icon của sản phẩm
  "workbench.productIconTheme": "a-file-icon-vscode-product-icon-theme",

  // Tắt các thông báo khi sử dụng Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // Cấu hình default formatter cho HTML
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Ẩn vùng không thay đổi trong diff editor
  "diffEditor.hideUnchangedRegions.enabled": true,

  // Cấu hình cho Custom CSS
  "vscode_custom_css.imports": [
    "file:///c:/Microsoft%20VS%20Code/custom-vscode/custom.css"
  ],

  // Tạo Pull Request trên GitHub khi chưa publish nhánh
  "githubPullRequests.createOnPublishBranch": "never",

  // Tắt xác nhận khi xóa file
  "explorer.confirmDelete": false,

  // Các lỗi PHP cần loại trừ
  "php.problems.exclude": {
    "/": ["PHP0443", "PHP0419"]
  },

  // Đặt ứng dụng mặc định cho các file Excel
  "workbench.editorAssociations": {
    "*.xlsx": "default"
  },

  // Đặt terminal mặc định là Git Bash trên Windows
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // Cấu hình theme icon cho workspace
  "workbench.iconTheme": "a-file-icon-vscode",

  // Cấu hình background cho sidebar
  "background.sidebar": {
    "images": [
      "https://i.pinimg.com/736x/4b/09/9c/4b099c10a4d5d62178f348bb304380f9.jpg"
    ],
    "opacity": 0.1,
    "size": "cover",
    "position": "center",
    "interval": 0,
    "random": false
  },

  // Cấu hình background cho editor
  "background.editor": {
    "useFront": true,
    "style": {
      "background-position": "100% 100%",
      "background-size": "auto",
      "opacity": 0.6
    },
    "styles": [{}, {}, {}],
    "images": [],
    "interval": 0,
    "random": false
  },

  // Cấu hình background cho panel
  "background.panel": {
    "images": [
      "https://i.pinimg.com/736x/fa/38/5c/fa385c8fb0dc010a9f14cff097a88de3.jpg"
    ],
    "opacity": 0.1,
    "size": "cover",
    "position": "center",
    "interval": 0,
    "random": false
  },

  // Cấu hình độ rộng con trỏ trong terminal
  "terminal.integrated.cursorWidth": 2,

  // Cấu hình môi trường cho terminal Windows
  "terminal.integrated.env.windows": {}
}
